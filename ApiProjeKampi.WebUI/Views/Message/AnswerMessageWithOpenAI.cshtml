@model ApiProjeKampi.WebUI.Dtos.MessageDtos.GetMessageByIdDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>OpenAI ile Otomatik Mesaj Yanıt Sayfası Güncelleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Müşteri Mesajı</label>
                            <textarea class="form-control" rows="12" style="height: 300px !important;" asp-for="MessageDetails"></textarea>
                            <br/>
                            <label>OpenAI Otomatik Cevabı</label>
                            <textarea class="form-control" name="ancwerAI" rows="12" style="height: 200px !important;">@ViewBag.ancwerAI</textarea>
                            <br/>
                            <button class="btn btn-primary">Cevabı Mail Olarak Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>