@model List<ApiProjeKampi.WebUI.Dtos.WhyYummyDtos.ResultWhyYummyDto?>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
    string[] icons = { "fas fa-chart-bar", "fas fa-gem", "fas fa-hamburger" };
    string[] colors = { "bg-primary", "bg-success", "bg-warning" };
}

<section class="section">
    <div class="section-header">
        <h1>Neden Yummy?</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">Neden Yummy</div>
        </div>
    </div>

    <div class="section-body">

        <div class="row mb-3">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <p class="text-muted mb-0">Sitede gösterilen <strong>@Model.Count()</strong> kart yönetiliyor.</p>
                <a href="~/WhyYummy/CreateWhyYummy/" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus mr-1"></i> Yeni Ekle
                </a>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                if (item == null) continue;
                string icon  = count < icons.Length  ? icons[count]  : "fas fa-star";
                string color = count < colors.Length ? colors[count] : "bg-secondary";
                count++;

                <div class="col-lg-4 col-md-6 col-12 mb-4">
                    <div class="card h-100" style="border-top: 4px solid #6777ef;">
                        <div class="card-body">

                            <!-- İkon -->
                            <div class="mb-3">
                                <span class="btn btn-lg @color" style="border-radius:50%; width:56px; height:56px; padding:0; display:inline-flex; align-items:center; justify-content:center; pointer-events:none;">
                                    <i class="@icon text-white" style="font-size:1.3rem;"></i>
                                </span>
                            </div>

                            <!-- Numara -->
                            <span class="badge badge-light float-right" style="font-size:0.85rem;">#@count</span>

                            <!-- İçerik -->
                            <h5 class="font-weight-bold mt-2">@item.Title</h5>
                            <p class="text-muted mt-2" style="font-size:0.9rem; line-height:1.7;">@item.Description</p>

                        </div>
                        <div class="card-footer bg-transparent d-flex justify-content-end" style="gap:8px;">
                            <a href="~/WhyYummy/UpdateWhyYummy/@item.ServiceId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit mr-1"></i> Düzenle
                            </a>
                            <a href="~/WhyYummy/DeleteWhyYummy/@item.ServiceId"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('@item.Title kartını silmek istediğinize emin misiniz?')">
                                <i class="fas fa-trash mr-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Count() == 0)
            {
                <div class="col-12">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="fas fa-question-circle fa-4x text-warning mb-3"></i>
                            <h4>Henüz kart eklenmemiş</h4>
                            <p class="text-muted">Neden Yummy bölümü için kart ekleyin.</p>
                            <a href="~/WhyYummy/CreateWhyYummy/" class="btn btn-primary mt-2">
                                <i class="fas fa-plus mr-1"></i> İlk Kartı Ekle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>