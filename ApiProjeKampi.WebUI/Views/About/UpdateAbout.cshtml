@model ApiProjeKampi.WebUI.Dtos.AboutDtos.UpdateAboutDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Güncelleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="AboutId"/>
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control"/>
                            <br/>
                            <label>Rezervasyon Numarası</label>
                            <input type="text" asp-for="RezervationNumber" class="form-control"/>
                            <br/>
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control"/>
                            <br/>
                            <label>Video Kapak Görseli</label>
                            <input type="text" asp-for="VideoCoverImageUrl" class="form-control"/>
                            <br/>
                            <label>Video Linki</label>
                            <input type="text" asp-for="VideoUrl" class="form-control"/>
                            <br/>
                            <label>Açıklama</label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <br/>
                            <button class="btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>