@model List<ApiProjeKampi.WebUI.Dtos.ContactDtos.ResultContactDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var contact = Model.FirstOrDefault();
}

<section class="section">
    <div class="section-header">
        <h1>İletişim Bilgileri</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">İletişim Bilgileri</div>
        </div>
    </div>

    <div class="section-body">

        @if (contact == null)
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="fas fa-phone-slash fa-4x text-muted mb-3"></i>
                            <h4>Henüz iletişim bilgisi eklenmemiş</h4>
                            <p class="text-muted">Restoran iletişim bilgilerini buradan yönetin.</p>
                            <a href="~/Contact/CreateContact/" class="btn btn-primary mt-2">
                                <i class="fas fa-plus mr-1"></i> Şimdi Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">

                <!-- Bilgi Kartları -->
                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="card h-100" style="border-top: 4px solid #6777ef;">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary mx-auto mb-3"
                                 style="width:56px; height:56px; border-radius:50%; display:flex; align-items:center; justify-content:center;">
                                <i class="fas fa-map-marker-alt text-white" style="font-size:1.3rem;"></i>
                            </div>
                            <h6 class="text-muted text-uppercase font-weight-bold mb-2" style="font-size:0.75rem; letter-spacing:0.08em;">Adres</h6>
                            <p class="font-weight-bold mb-0" style="font-size:0.92rem;">@contact.Address</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="card h-100" style="border-top: 4px solid #47c363;">
                        <div class="card-body text-center py-4">
                            <div class="bg-success mx-auto mb-3"
                                 style="width:56px; height:56px; border-radius:50%; display:flex; align-items:center; justify-content:center;">
                                <i class="fas fa-phone text-white" style="font-size:1.3rem;"></i>
                            </div>
                            <h6 class="text-muted text-uppercase font-weight-bold mb-2" style="font-size:0.75rem; letter-spacing:0.08em;">Telefon</h6>
                            <p class="font-weight-bold mb-0" style="font-size:0.92rem;">@contact.Phone</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="card h-100" style="border-top: 4px solid #fc544b;">
                        <div class="card-body text-center py-4">
                            <div class="bg-danger mx-auto mb-3"
                                 style="width:56px; height:56px; border-radius:50%; display:flex; align-items:center; justify-content:center;">
                                <i class="fas fa-envelope text-white" style="font-size:1.3rem;"></i>
                            </div>
                            <h6 class="text-muted text-uppercase font-weight-bold mb-2" style="font-size:0.75rem; letter-spacing:0.08em;">E-posta</h6>
                            <p class="font-weight-bold mb-0" style="font-size:0.92rem;">@contact.Email</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="card h-100" style="border-top: 4px solid #ffa426;">
                        <div class="card-body text-center py-4">
                            <div class="bg-warning mx-auto mb-3"
                                 style="width:56px; height:56px; border-radius:50%; display:flex; align-items:center; justify-content:center;">
                                <i class="fas fa-clock text-white" style="font-size:1.3rem;"></i>
                            </div>
                            <h6 class="text-muted text-uppercase font-weight-bold mb-2" style="font-size:0.75rem; letter-spacing:0.08em;">Açık Saatler</h6>
                            <p class="font-weight-bold mb-0" style="font-size:0.92rem;">@Html.Raw(@contact.OpenHours)</p>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Düzenle / Sil -->
            <div class="row">
                <div class="col-12">
                    <div class="card" style="border-left: 4px solid #6777ef;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle mr-1"></i>
                                Bilgileri güncellemek veya silmek için butonları kullanın.
                            </div>
                            <div>
                                <a href="~/Contact/UpdateContact/@contact.ContactId" class="btn btn-warning mr-2">
                                    <i class="fas fa-edit mr-1"></i> Düzenle
                                </a>
                                <a href="~/Contact/DeleteContact/@contact.ContactId"
                                   class="btn btn-danger"
                                   onclick="return confirm('İletişim bilgilerini silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash mr-1"></i> Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>