@model List<ApiProjeKampi.WebUI.Dtos.RezervationDtos.ResultRezervationDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Kategori Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Müşteri Adı</th>
                                <th scope="col">Rezervasyon Tarihi</th>
                                <th scope="col">Rezervasyon Saati</th>
                                <th scope="col">Kişi Sayısı</th>
                                <th scope="col">Rezervasyon Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Onayla</th>
                                <th scope="col">İptal Et</th>
                                <th scope="col">Beklet</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Date.ToString("dd-MM-yyyy")</td>
                                    <td>@item.Time</td>
                                    <td>@item.CountOfPeople</td>
                                    <td>@item.Status</td>
                                    <td><a href="~/Rezervation/DeleteRezervation/@item.RezervationId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Rezervation/UpdateRezervation/@item.RezervationId" class="btn btn-warning">Güncelle</a></td>
                                    <td><a href="~/Rezervation/AcceptRezervation/@item.RezervationId" class="btn btn-success">Onayla</a></td>
                                    <td><a href="~/Rezervation/CancelRezervation/@item.RezervationId" class="btn btn-dark">İptal Et</a></td>
                                    <td><a href="~/Rezervation/WaitRezervation/@item.RezervationId" class="btn btn-info">Bekler</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="~/Rezervation/CreateRezervation/" class="btn btn-info">Yeni Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>