@model List<ApiProjeKampi.WebUI.Dtos.FeatureDtos.ResultFeatureDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var feature = Model.FirstOrDefault();
}

<section class="section">
    <div class="section-header">
        <h1>Öne Çıkan Alan</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">Öne Çıkan Alan</div>
        </div>
    </div>

    <div class="section-body">

        @if (feature == null)
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="fas fa-star fa-4x text-warning mb-3"></i>
                            <h4>Henüz içerik eklenmemiş</h4>
                            <p class="text-muted">Öne çıkan alan için başlık, alt başlık ve açıklama ekleyin.</p>
                            <a href="~/Feature/CreateFeature/" class="btn btn-primary mt-2">
                                <i class="fas fa-plus mr-1"></i> Şimdi Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    <div class="card" style="border-left: 4px solid #6777ef;">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4><i class="fas fa-eye mr-2"></i>Mevcut İçerik Önizlemesi</h4>
                            <div>
                                <a href="~/Feature/UpdateFeature/@feature.FeatureId" class="btn btn-warning btn-sm mr-1">
                                    <i class="fas fa-edit mr-1"></i> Düzenle
                                </a>
                                <a href="~/Feature/DeleteFeature/@feature.FeatureId"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash mr-1"></i> Sil
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="p-4 rounded" style="background:#f8f9fa; border: 1px dashed #dee2e6;">
                                <small class="text-muted d-block mb-3">
                                    <i class="fas fa-desktop mr-1"></i> Sitedeki Görünüm
                                </small>
                                <h2 style="font-weight:700; font-size:1.8rem;">@feature.Title</h2>
                                <h5 class="text-muted mt-1">@feature.SubTitle</h5>
                                <p class="mt-2 text-muted">@feature.Description</p>
                                <div class="mt-3">
                                    <span class="btn btn-danger btn-sm mr-2" style="pointer-events:none;">Rezervasyon Yapın</span>
                                    <span class="text-muted small">▶ Videoyu İzleyin</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>