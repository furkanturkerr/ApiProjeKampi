@model ApiProjeKampi.WebUI.Dtos.RezervationDtos.UpdateRezervationDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Rezervation Güncelleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="RezervationId"/>
                            <label>Misafir Adı Soyadı</label>
                            <input type="text" asp-for="NameSurname" class="form-control"/>
                            <br/>
                            <label>Misafir Email Adresi</label>
                            <input type="email" asp-for="Email" class="form-control"/>
                            <br/>
                            <label>Misafir Telefon Numarası</label>
                            <input type="tel" asp-for="PhoneNumber" class="form-control"/>
                            <br/>
                            <label>Rezervasyon Tarihi</label>
                            <input type="date" asp-for="Date" class="form-control"/>
                            <br/>
                            <label>Rezervasyon Saati</label>
                            <input type="time" asp-for="Time" class="form-control"/>
                            <br/>
                            <label>Kişi Sayısı</label>
                            <input type="text" asp-for="CountOfPeople" class="form-control"/>
                            <br/>
                            <label>Misafir Mesajı</label>
                            <input type="text" asp-for="Message" class="form-control"/>
                            <br/>
                            <label>Rezervasyon Durumu</label>
                            <input type="text" asp-for="Status" readonly class="form-control"/>
                            <br/>
                            <button class="btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>