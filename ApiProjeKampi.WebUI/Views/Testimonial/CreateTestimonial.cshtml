@model ApiProjeKampi.WebUI.Dtos.TestimonialDtos.CreateTestimonialDto

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Yorum Ekleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Müşteri Adı</label>
                            <input type="text" asp-for="NameSurname" class="form-control"/>
                            <br/>
                            <label>Müşteri Yorum Başlığı</label>
                            <input type="text" asp-for="Title" class="form-control"/>
                            <br/>
                            <label>Müşteri Yorumu</label>
                            <input type="text" asp-for="Commend" class="form-control"/>
                            <br/>
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control"/>
                            <br/>
                            <button class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>