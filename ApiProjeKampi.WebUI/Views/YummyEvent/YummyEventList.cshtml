@model List<ApiProjeKampi.WebUI.Dtos.YummyEventsDtos.ResultYummyEventsDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-header">
        <h1>Etkinlikler</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">Etkinlikler</div>
        </div>
    </div>

    <div class="section-body">

        <!-- İstatistik Kartları -->
        <div class="row mb-4">
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-primary">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>Toplam Etkinlik</h4></div>
                        <div class="card-body">@Model.Count()</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-success">
                        <i class="fas fa-lira-sign"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>En Düşük Fiyat</h4></div>
                        <div class="card-body">
                            @(Model.Count() > 0 ? "₺" + Model.Min(x => x.Price) : "-")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-warning">
                        <i class="fas fa-lira-sign"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>En Yüksek Fiyat</h4></div>
                        <div class="card-body">
                            @(Model.Count() > 0 ? "₺" + Model.Max(x => x.Price) : "-")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4><i class="fas fa-calendar-alt mr-2"></i>Etkinlik Listesi</h4>
                        <a href="~/YummyEvent/CreateYummyEvent/" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus mr-1"></i> Yeni Etkinlik Ekle
                        </a>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="col-lg-4 col-md-6 col-12 mb-4">
                                    <div class="card h-100" style="border-top: 4px solid #6777ef;">
                                        <div class="card-body">

                                            <!-- Numara & Fiyat -->
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <span class="badge badge-light">#@count</span>
                                                <span class="badge badge-success" style="font-size:0.9rem;">
                                                    ₺@item.Price
                                                </span>
                                            </div>

                                            <!-- Başlık -->
                                            <h5 class="font-weight-bold">@item.Title</h5>

                                            <!-- Açıklama -->
                                            <p class="text-muted mt-2"
                                               style="font-size:0.88rem; line-height:1.7; display:-webkit-box; -webkit-line-clamp:3; -webkit-box-orient:vertical; overflow:hidden;">
                                                @item.Description
                                            </p>

                                        </div>
                                        <div class="card-footer bg-transparent d-flex justify-content-end" style="gap:8px;">
                                            <a href="~/YummyEvent/UpdateYummyEvent/@item.YummyEventId"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit mr-1"></i> Düzenle
                                            </a>
                                            <a href="~/YummyEvent/DeleteYummyEvent/@item.YummyEventId"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('@item.Title etkinliğini silmek istediğinize emin misiniz?')">
                                                <i class="fas fa-trash mr-1"></i> Sil
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Count() == 0)
                            {
                                <div class="col-12">
                                    <div class="card text-center py-5">
                                        <div class="card-body">
                                            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                                            <h4>Henüz etkinlik eklenmemiş</h4>
                                            <p class="text-muted">Yeni etkinlik eklemek için butona tıklayın.</p>
                                            <a href="~/YummyEvent/CreateYummyEvent/" class="btn btn-primary mt-2">
                                                <i class="fas fa-plus mr-1"></i> İlk Etkinliği Ekle
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        @if (Model.Count() > 0)
                        {
                            <div class="mt-2 text-muted small">
                                Toplam <strong>@Model.Count()</strong> etkinlik listeleniyor
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>