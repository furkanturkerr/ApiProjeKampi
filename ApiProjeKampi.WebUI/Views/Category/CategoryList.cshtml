@model List<ApiProjeKampi.WebUI.Dtos.CategoryDtos.ResultCategoryDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-header">
        <h1>Kategori Listesi</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">Kategori Listesi</div>
        </div>
    </div>

    <div class="section-body">

        <!-- İstatistik Kartları -->
        <div class="row mb-4">
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-primary">
                        <i class="fas fa-tags"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>Toplam Kategori</h4></div>
                        <div class="card-body">@Model.Count()</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>Aktif Kategori</h4></div>
                        <div class="card-body">@Model.Count()</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="card card-statistic-1">
                    <div class="card-icon bg-warning">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <div class="card-wrap">
                        <div class="card-header"><h4>Son Eklenen</h4></div>
                        <div class="card-body">@(Model.LastOrDefault()?.Name ?? "-")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4><i class="fas fa-tags mr-2"></i>Kategori Listesi</h4>
                        <a href="~/Category/CreateCategory/" class="btn btn-primary">
                            <i class="fas fa-plus mr-1"></i> Yeni Kategori Ekle
                        </a>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th width="60">#</th>
                                        <th>Kategori Adı</th>
                                        <th width="80" class="text-center">Sil</th>
                                        <th width="100" class="text-center">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td><span class="badge badge-light">@count</span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="mr-2" style="font-size:1rem;width:20px;text-align:center;"></i>
                                                    <span class="font-weight-bold">@item.Name</span>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <a href="~/Category/DeleteCategory/@item.CategoryId"
                                                   class="btn btn-danger btn-sm"
                                                   onclick="return confirm('@item.Name kategorisini silmek istediğinize emin misiniz?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <a href="~/Category/UpdateCategory/@item.CategoryId"
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-2 text-muted small">
                            Toplam <strong>@Model.Count()</strong> kategori listeleniyor
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>