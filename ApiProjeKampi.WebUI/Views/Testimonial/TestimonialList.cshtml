@model List<ApiProjeKampi.WebUI.Dtos.TestimonialDtos.ResultTestimonialDto>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Yorum Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Müşteri Adı Soyadı</th>
                                <th scope="col">Müşteri Yorum Başlığı</th>
                                <th scope="col">Müşteri Yorumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td>@item.Commend</td>
                                    <td><a href="~/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="~/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="~/Testimonial/CreateTestimonial/" class="btn btn-info">Yeni Yorum Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>